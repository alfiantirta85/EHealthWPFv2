<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aplikasi E-Health - Manajemen Pasien" 
        Height="750" Width="1000"
        WindowStartupLocation="CenterScreen">
    <TabControl HorizontalAlignment="Left" Height="740" Margin="0,0,0,0" VerticalAlignment="Top" Width="990">
        <TabItem x:Name="Form_Tab" Header="Form Tab">
            <Grid Margin="10,42,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock 
                    Grid.Row="0" 
                    Text="Form E-HEALTH - MANAJEMEN PASIEN" 
                    FontSize="20" 
                    FontWeight="Bold" 
                    HorizontalAlignment="Left" 
                    Margin="306,10,0,10"
                    Foreground="#2C3E50" Width="664" Grid.ColumnSpan="3"
                />

                <Border 
                    Grid.Row="1" 
                    BorderBrush="#BDC3C7" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Padding="15" 
                    Margin="0,0,0,10" 
                    Grid.ColumnSpan="2"
                >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="70"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="70"/>
                            <RowDefinition Height="35"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="ID Pasien:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtID" VerticalAlignment="Center" Margin="0,0,10,0"/>

                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Nama Lengkap:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="3" x:Name="txtNama" VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Tanggal Lahir:" VerticalAlignment="Center"/>
                        <DatePicker Grid.Row="1" Grid.Column="1" x:Name="dtpTanggalLahir" VerticalAlignment="Center" Margin="0,0,10,0"/>

                        <TextBlock Grid.Row="1" Grid.Column="2" Text="Jenis Kelamin:" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="1" Grid.Column="3" x:Name="cboJenisKelamin" VerticalAlignment="Center">
                            <ComboBoxItem Content="Laki-laki" IsSelected="True"/>
                            <ComboBoxItem Content="Perempuan"/>
                        </ComboBox>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="No. Telepon:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtTelepon" VerticalAlignment="Center" Margin="0,0,10,0"/>

                        <TextBlock Grid.Row="2" Grid.Column="2" Text="Tanggal Daftar:" VerticalAlignment="Center"/>
                        <DatePicker Grid.Row="2" Grid.Column="3" x:Name="dtpTanggalDaftar" VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Alamat:" VerticalAlignment="Top" Margin="0,5,0,0"/>
                        <TextBox 
                            Grid.Row="3" 
                            Grid.Column="1" 
                            x:Name="txtAlamat" 
                            TextWrapping="Wrap" 
                            AcceptsReturn="True" 
                            VerticalScrollBarVisibility="Auto"
                            Height="60" Margin="0,5,10,5"
                        />
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Diagnosa:" VerticalAlignment="Center"/>
                        <TextBox 
                            Grid.Row="5" 
                            Grid.Column="0" 
                            Grid.ColumnSpan="4" 
                            x:Name="txtDiagnosa" 
                            TextWrapping="Wrap" 
                            AcceptsReturn="True" 
                            VerticalScrollBarVisibility="Auto"
                            Height="60"
                        />
                    </Grid>
                </Border>

                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10" Grid.ColumnSpan="2">
                    <Button x:Name="btnTambah" Content="Tambah Data" Width="120" Height="35" Margin="0,0,10,0" Background="#2ECC71" Foreground="White" FontWeight="Bold"/>
                    <Button x:Name="btnEdit" Content="Edit Data" Width="120" Height="35" Margin="0,0,10,0" Background="#3498DB" Foreground="White" FontWeight="Bold"/>
                    <Button x:Name="btnHapus" Content="Hapus Data" Width="120" Height="35" Margin="0,0,10,0" Background="#E74C3C" Foreground="White" FontWeight="Bold"/>
                    <Button x:Name="btnBersihkan" Content="Bersihkan" Width="120" Height="35" Margin="0,0,10,0" Background="#F39C12" Foreground="White" FontWeight="Bold"/>
                    <Button x:Name="btnCetak" Content="Cetak Laporan" Width="140" Height="35" Background="#95A5A6" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </TabItem>
        <TabItem x:Name="Table_Tap" Header="Tabel Tab">
            <Grid Margin="10,42,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>


                <Border 
                    Grid.Row="0" 
                    BorderBrush="#BDC3C7" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Padding="10" 
                    Margin="0,-32,0,10"
                >
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Cari Pasien:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                        <TextBox x:Name="txtCari" Width="300" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <Button x:Name="btnCari" Content="Cari" Width="80" Height="30" Background="#1ABC9C" Foreground="White" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <DataGrid 
                    Grid.Row="1" 
                    x:Name="dgvPasien" 
                    AutoGenerateColumns="False" 
                    IsReadOnly="True"
                    SelectionMode="Single"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    GridLinesVisibility="All"
                    HeadersVisibility="Column"
                    Background="White"
                    AlternatingRowBackground="#ECF0F1" Grid.ColumnSpan="2"
                >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID Pasien" Binding="{Binding ID}" Width="80"/>
                        <DataGridTextColumn Header="Nama Lengkap" Binding="{Binding Nama}" Width="150"/>
                        <DataGridTextColumn Header="Tgl Lahir" Binding="{Binding TanggalLahirStr}" Width="100"/>
                        <DataGridTextColumn Header="Umur" Binding="{Binding UmurStr}" Width="60"/>
                        <DataGridTextColumn Header="Jenis Kelamin" Binding="{Binding JenisKelamin}" Width="110"/>
                        <DataGridTextColumn Header="Alamat" Binding="{Binding Alamat}" Width="*"/>
                        <DataGridTextColumn Header="Telepon" Binding="{Binding Telepon}" Width="120"/>
                        <DataGridTextColumn Header="Diagnosa" Binding="{Binding Diagnosa}" Width="150"/>
                        <DataGridTextColumn Header="Tgl Daftar" Binding="{Binding TanggalDaftarStr}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>

                <TextBlock 
                    Grid.Row="2" 
                    x:Name="lblJumlah" 
                    Text="Total Pasien: 0" 
                    FontWeight="Bold" 
                    Foreground="#2C3E50" 
                    Margin="0,10,0,0" 
                    Grid.ColumnSpan="2"
                 />
            </Grid>
        </TabItem>
    </TabControl>
</Window>